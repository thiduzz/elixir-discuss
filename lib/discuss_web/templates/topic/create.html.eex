<section class="flex items-center pt-10">
  <div>
    <%= form_for @changeset, Routes.topic_path(@conn, :store),[method: :post, class: "flex flex-row"],  fn  f -> %>
        <div class="flex flex-col">
          <%= text_input f, :title, placeholder: "Topic title" %>
          <%= error_tag f, :title %>
        </div>
        <%= submit "Create Topic", class: "px-5 ml-5" %>

    <%= end %>
  </div>
</section>